name: Build and deploy to Azure Web App ğŸš€

on:
  push:
    branches:
      - production
  workflow_dispatch:

jobs:
  build:
    runs-on: windows-latest

    steps:
      - uses: actions/checkout@v4

      - name: Set up .NET Core ğŸ› ï¸
        uses: actions/setup-dotnet@v1
        with:
          dotnet-version: '8.x'
          include-prerelease: true

      - name: Build with dotnet ğŸ—ï¸
        run: dotnet build --configuration Release

      - name: dotnet publish ğŸ“¦
        run: dotnet publish -c Release -o ${{env.DOTNET_ROOT}}/myapp

      - name: Upload artifact for deployment job âœˆï¸
        uses: actions/upload-artifact@v3
        with:
          name: .net-app
          path: ${{env.DOTNET_ROOT}}/myapp

  deploy:
    runs-on: windows-latest
    needs: build
    environment:
      name: 'Production'
      url: ${{ steps.deploy-to-webapp.outputs.webapp-url }}

    steps:
      - name: Download artifact from build job ğŸ“¡
        uses: actions/download-artifact@v3
        with:
          name: .net-app

      - name: Deploy to Azure Web App ğŸ’¸
        id: deploy-to-webapp
        uses: azure/webapps-deploy@v2
        with:
          app-name: 'infinetcode-project-dojo-api'
          slot-name: 'Production'
          publish-profile: ${{ secrets.AZUREAPPSERVICE_PUBLISHPROFILE_218D5DC23A5845DA977DD8C4F2B5D69B }}
          package: .
